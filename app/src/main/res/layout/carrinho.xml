<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_carrinho"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradienthome"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoJogoCarrinho"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/csgo"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nomeJogoCarrinho"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/jogoExemplo"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/fotoJogoCarrinho"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/remover_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RemoverItem"
        app:layout_constraintStart_toEndOf="@id/nomeJogoCarrinho"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>