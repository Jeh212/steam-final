<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/fotoAmigo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/zoro"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/amigobordajogando"
        android:paddingVertical="2dp"/>

    <TextView
        android:id="@+id/nomeAmigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jogoExemplo"
        android:textSize="20sp"
        android:textColor="@color/amigoJogoExecutando"
        android:textStyle="bold"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintStart_toEndOf="@+id/fotoAmigo"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/jogoExecutando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jogoExemplo"
        android:textSize="16sp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:textColor="@color/amigoJogoExecutando"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/nomeAmigo"
        app:layout_constraintStart_toEndOf="@+id/fotoAmigo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>